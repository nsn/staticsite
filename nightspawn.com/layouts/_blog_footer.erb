<% index = sorted_articles.find_index(post) %> 
<div class="blogpostfooter">
  by nsn on <%= Time.parse(post[:created_at]).strftime("%Y-%d-%m") %> 
  tags: 
  <% post[:tags].each do |tag| %>
    <%= link_to(tag, '/rants/tags/' + tag + "/") %>
  <% end %>

  <div class="pager">
    <% if index > 0 
          prevart = sorted_articles[index-1] %>
          <span class="pagerprev"><%= link_to("&lt;&lt; " + prevart[:title], prevart)%></span>
    <% end %>
    <% if index < sorted_articles.length-1 
          nextart = sorted_articles[index+1]%>
          <span class="pagernext"><%= link_to(nextart[:title] + " &gt;&gt;", nextart)%></span>
    <% end %>
  </div>
    
</div>


